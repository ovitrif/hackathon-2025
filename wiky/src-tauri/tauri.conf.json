{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Wiky",
  "version": "0.1.0",
  "identifier": "com.wiky.app",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "title": "Wiky",
        "width": 1280,
        "height": 960,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../ui/logo.png"
    ]
  }
}
